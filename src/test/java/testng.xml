<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" data-provider-thread-count="2" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.app.demo.base.WebDriverListener"/>
    </listeners>
    <test name="ChromeTest">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="com.app.demo.runner.Runner"/>
        </classes>
    </test>
    <test name="FirefoxTest">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="com.app.demo.runner.Runner"/>
        </classes>
    </test>
</suite>